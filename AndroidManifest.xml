    <application android:label="@string/app_name" android:icon="@drawable/cb" android:theme="@style/Theme_day">
        <activity android:name=".main"
                  android:label="@string/app_name">
            
        </activity>
        <activity android:name="splash">
        	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.Forms.EditCoordinate"></activity>
        <activity android:name=".Views.Forms.EditWaypoint"></activity>
        <activity android:name=".Views.Forms.Settings"></activity>
        <activity android:name=".Views.Forms.HintDialog" android:theme="@style/ThemeHintDialog"></activity>

