<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme_day" parent="android:Theme">
    	<item name="android:windowBackground">@drawable/EmptyBackgroundDay</item>
    	<item name="ListBackground">@color/Day_ListBackground</item>
	    <item name="ListBackground_secend">@color/Day_ListBackground_secend</item>
	    <item name="ListBackground_select">@color/Day_SelectedBackground</item>
        <item name="android:windowTitleSize">20dip</item>
        <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#333</item>
	    <item name="android:textStyle">bold</item>
        <item name="android:buttonStyle">@style/Day_Button</item>
        <item name="android:buttonStyleToggle">@style/Day_Toggle_Button</item>
	    <item name="android:checkboxStyle">@style/Day_chkBox</item>
	    <item name="DropDownBackground">@drawable/popup_bottom_bright</item> 
		<item name="ZoomStyle">@style/day_ZoomControls</item> 
    </style>
    
    
    <style name="Theme_night" parent="android:Theme">
        <item name="android:windowBackground">@drawable/EmptyBackgroundNight</item>
        <item name="ListBackground">@color/Night_ListBackground</item>
	    <item name="ListBackground_secend">@color/Night_ListBackground_secend</item>
	    <item name="ListBackground_select">@color/Night_SelectedBackground</item>
        <item name="android:windowTitleSize">20dip</item>
        <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#FF0000</item>
 		<item name="android:textStyle">bold</item>
	    <item name="android:buttonStyle">@style/Night_Button</item>
	    <item name="android:buttonStyleToggle">@style/Night_Toggle_Button</item>
	    <item name="android:checkboxStyle">@style/Night_chkBox</item>
		<item name="DropDownBackground">@drawable/popup_bottom_dark</item>
	    <item name="ZoomStyle">@style/day_ZoomControls</item>
    </style>


</resources>
