<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme_day" parent="android:Theme">
        <item name="android:windowTitleSize">20dip</item>
        <item name="android:buttonStyle">@style/Day_Button</item>
        <item name="android:windowBackground">@drawable/EmptyBackgroundDay</item>
 		<item name="android:textSize">12sp</item>
	    <item name="android:textColor">#333</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:buttonStyleToggle">@style/Day_Toggle_Button</item>   
    </style>
    
    
    <style name="Theme_night" parent="android:Theme">
        <item name="android:windowTitleSize">20dip</item>
        <item name="android:windowBackground">@drawable/EmptyBackgroundNight</item>
 		<item name="android:textSize">12sp</item>
	    <item name="android:textColor">#FF0000</item>
	    <item name="android:buttonStyle">@style/Night_Button</item>
	    <item name="android:buttonStyleToggle">@style/Day_Toggle_Button</item>
    </style>


</resources>
