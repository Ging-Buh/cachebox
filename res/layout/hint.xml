<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:orientation="vertical" android:layout_height="wrap_content" android:minWidth="250dip">
    <EditText android:text="EditText" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/hintdialog_text" android:editable="false"></EditText>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/hintdialog_layout">
        <Button android:text="Decode" android:layout_height="wrap_content" android:id="@+id/hintdialog_button_decode" android:layout_width="match_parent" android:layout_weight="1"></Button>
        <Button android:text="Close" android:layout_height="wrap_content" android:id="@+id/hintdialog_button_close" android:layout_width="match_parent" android:layout_weight="1"></Button>
    </LinearLayout>
</LinearLayout>
