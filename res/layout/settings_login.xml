<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="match_parent" android:orientation="vertical" android:layout_width="match_parent">
    <TextView android:id="@+id/settings_textView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="GroundSpeak Name"></TextView>
    <EditText android:layout_width="match_parent" android:text="EditText" android:layout_height="wrap_content" android:id="@+id/settings_editText1"></EditText>
    <TextView android:id="@+id/settings_textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GroundSpeak Passwort"></TextView>
    <EditText android:layout_width="match_parent" android:text="EditText" android:layout_height="wrap_content" android:id="@+id/settings_editText2" android:password="true" android:singleLine="true" android:inputType="textPassword"></EditText>
    <TextView android:id="@+id/settings_textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GCVote Passwort"></TextView>
    <EditText android:layout_width="match_parent" android:text="EditText" android:layout_height="wrap_content" android:id="@+id/settings_editText3" android:password="true" android:singleLine="true" android:inputType="textPassword"></EditText>
</LinearLayout>
