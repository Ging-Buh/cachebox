<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:id="@+id/searchDialog">

	<LinearLayout android:orientation="horizontal" android:id="@+id/header"
		android:background="@drawable/header" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<de.cachebox_test.Custom_Controls.MultiToggleButton
				android:layout_weight="1" android:layout_height="45dip"
				android:layout_width="match_parent" android:text="Online"
				android:id="@+id/search_on" android:layout_marginRight="5dip" />

		<de.cachebox_test.Custom_Controls.MultiToggleButton
			android:layout_weight="1" android:layout_width="match_parent" android:layout_height="45dip"
			android:text="Title"  android:id="@+id/search_title" />
		<de.cachebox_test.Custom_Controls.MultiToggleButton
			android:layout_weight="1" android:layout_width="match_parent" android:layout_height="45dip"
			android:text="GC-Code" 
			android:id="@+id/search_gc" />
		<de.cachebox_test.Custom_Controls.MultiToggleButton
			android:layout_weight="1" android:layout_width="match_parent" android:layout_height="45dip"
			android:text="Owner"  android:id="@+id/search_owner" />





	</LinearLayout>

	<LinearLayout android:id="@+id/content"
		android:orientation="vertical" android:background="@drawable/center"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<EditText android:layout_width="match_parent" android:text=""
			android:layout_height="wrap_content" android:id="@+id/search_edit"
			android:singleLine="true" android:inputType="text" android:password="false">
		</EditText>


	</LinearLayout>

	<RelativeLayout android:orientation="horizontal" android:id="@+id/footer"
		android:background="@drawable/footer" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="right">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			
			<Button android:id="@+id/search_filter" android:textColor="?attr/TextColor"
				android:layout_marginTop="3dip" android:layout_width="match_parent"
				android:layout_height="45dip" android:layout_gravity="center_horizontal"
				android:text="Import" android:layout_weight="1.1" />

			<Button android:id="@+id/search_search" android:textColor="?attr/TextColor"
				android:layout_marginTop="3dip" android:layout_width="match_parent"
				android:layout_height="45dip" android:layout_gravity="center_horizontal" android:layout_weight="1.05" />
				
			<Button android:id="@+id/search_next" android:textColor="?attr/TextColor"
				android:layout_marginTop="3dip" android:layout_width="match_parent"
				android:layout_height="45dip" android:layout_gravity="center_horizontal" android:layout_weight="0.98" />
			
			<Button android:id="@+id/search_cancel" android:textColor="?attr/TextColor"
				android:layout_marginTop="3dip" android:layout_width="match_parent"
				android:layout_height="45dip" android:layout_gravity="center_horizontal" android:layout_weight="0.95" />
			

		</LinearLayout>

	</RelativeLayout>

</LinearLayout>
