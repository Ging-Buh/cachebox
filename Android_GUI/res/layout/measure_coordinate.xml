<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">



		<LinearLayout android:layout_height="50dip"
			android:layout_width="wrap_content" android:id="@+id/lin1">
			<include android:layout_width="wrap_content" layout="@layout/strength_control"
				android:id="@+id/strength_control" android:layout_gravity="right"
				android:layout_height="match_parent" android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"></include>

		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/lin2"
			android:layout_below="@+id/lin1">
			<TextView android:layout_width="wrap_content" android:id="@+id/textView1"
				android:layout_height="wrap_content" android:layout_below="@+id/strength_control"
				android:layout_alignParentLeft="true" android:text="Measurments:"
				android:layout_toLeftOf="@+id/textView2"></TextView>
			<TextView android:id="@+id/textView2" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="0/0"
				android:layout_alignParentRight="true" android:layout_gravity="right"
				android:layout_marginLeft="10dip"></TextView>

		</LinearLayout>

		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/lin3"
			android:layout_below="@+id/lin2">
			<TextView android:layout_width="wrap_content" android:id="@+id/textView3"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true" android:text="Coords"
				android:layout_alignRight="@+id/textView1"></TextView>
			<TextView android:id="@+id/textView4" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_marginLeft="10dip"
				android:text="N 53 12.123 / E 13 12.234"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"></TextView>
		</LinearLayout>


	<FrameLayout android:layout_alignParentLeft="true"
		android:layout_height="match_parent" android:layout_above="@+id/meco_buttonlayout"
		android:layout_width="match_parent" android:layout_below="@+id/lin3">
		<de.cachebox_test.Custom_Controls.CanvasDrawControl
			android:id="@+id/meco_panel" android:layout_width="match_parent"
			android:layout_gravity="bottom" android:layout_height="match_parent">
		</de.cachebox_test.Custom_Controls.CanvasDrawControl>




	</FrameLayout>

	<LinearLayout android:orientation="horizontal" android:id="@+id/meco_buttonlayout"
		android:layout_width="match_parent" android:layout_alignParentBottom="true"
		android:layout_height="55dip">
		<Button android:layout_weight="1" android:layout_width="match_parent"
			android:text="Button" android:layout_height="match_parent"
			android:id="@+id/edco_ok"></Button>
		<Button android:layout_weight="1" android:layout_width="match_parent"
			android:text="Button" android:layout_height="match_parent"
			android:id="@+id/edco_cancel"></Button>
	</LinearLayout>



</RelativeLayout>
