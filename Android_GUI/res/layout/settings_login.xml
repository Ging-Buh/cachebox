<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:orientation="vertical"
	android:layout_width="match_parent" android:background="?attr/DropDownBackground">

	<CheckBox android:text="I`m GC Premium Member"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:id="@+id/settings_login_premium">
	</CheckBox>


	<TextView android:id="@+id/settings_textView1"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:text="GroundSpeak Name">
	</TextView>
	<EditText android:layout_width="match_parent" android:text="EditText"
		android:layout_height="wrap_content" android:id="@+id/settings_editText1">
	</EditText>
	<TextView android:id="@+id/settings_textView2"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="GroundSpeak Passwort">
	</TextView>
	<EditText android:layout_width="match_parent" android:text="EditText"
		android:layout_height="wrap_content" android:id="@+id/settings_editText2"
		android:password="false" android:singleLine="true" android:inputType="text|textPassword">
	</EditText>
	<TextView android:id="@+id/settings_textView5"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="GroundSpeak API Key">
	</TextView>
	<EditText android:layout_width="match_parent" android:text="EditText"
		android:layout_height="wrap_content" android:id="@+id/settings_editText5"
		android:singleLine="true" android:inputType="text" android:password="false">
	</EditText>
	<TextView android:id="@+id/settings_textView3"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="GCVote Passwort">
	</TextView>
	<EditText android:layout_width="match_parent" android:text="EditText"
		android:layout_height="wrap_content" android:id="@+id/settings_editText3"
		android:password="false" android:singleLine="true" android:inputType="text|textPassword">
	</EditText>
	<TextView android:id="@+id/settings_textView4"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="gcJoker md5-Hash">
	</TextView>
	<EditText android:layout_width="match_parent" android:text="EditText"
		android:layout_height="wrap_content" android:id="@+id/settings_editText4"
		android:singleLine="true" android:inputType="text" android:password="false">
	</EditText>
</LinearLayout>
