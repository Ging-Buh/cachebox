<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:id="@+id/solverLayout" android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_width="match_parent"
		android:id="@+id/solverButtons">
		<Button android:text="Button" android:layout_marginTop="3dip"
			android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="55dip" android:id="@+id/solverButtonSolve"></Button>
		<Button android:text="Button" android:layout_marginTop="3dip"
			android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="55dip" android:id="@+id/solverButtonFunktion"></Button>
		<Button android:text="Button" android:layout_marginTop="3dip"
			android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="55dip" android:id="@+id/solverButtonSelect"></Button>
		<Button android:text="Button" android:layout_marginTop="3dip"
			android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="55dip" android:id="@+id/solverButtonKeyb"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout1"
		android:orientation="vertical" android:layout_width="match_parent"
		android:layout_above="@+id/solverEditBoxes" android:layout_height="match_parent">
		<EditText android:text="EditText" android:id="@+id/solverText"
			android:gravity="top" android:layout_width="match_parent"
			android:layout_weight="1" android:layout_height="50dip"></EditText>
		<EditText android:text="EditText" android:id="@+id/solverResult"
			android:layout_width="match_parent" android:layout_weight="1"
			android:layout_height="50dip" android:editable="false"
			android:gravity="top"></EditText>
	</LinearLayout>

</LinearLayout>
