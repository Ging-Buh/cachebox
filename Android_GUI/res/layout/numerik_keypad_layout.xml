				android:singleLine="true" android:maxWidth="100dip" />
				
			<Button android:id="@+id/numPoint" android:text="."
				android:layout_marginTop="3dip" android:layout_width="0dip"
				android:layout_weight="1" android:layout_height="55dip"
				android:singleLine="true" android:maxWidth="100dip" />
				
			<Button android:id="@+id/negativeButton"
				android:layout_marginTop="3dip" android:layout_width="0dip"
				android:layout_weight="1" android:layout_height="55dip"
				android:singleLine="true" android:maxWidth="100dip" />
			

		</LinearLayout>
		
<!--Line 3-->		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			<Button android:id="@+id/num7" android:text="7"
				android:layout_marginTop="3dip" android:layout_width="0dip"
