<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:minWidth="280dip" android:layout_height="wrap_content">

	
<!--Line 1-->		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			<Button android:id="@+id/num1" android:text="1"
				android:layout_marginTop="3dip" android:layout_width="0dip"
				android:layout_weight="1" android:layout_height="55dip"
				android:singleLine="true" android:maxWidth="100dip" />

			<Button android:id="@+id/num2" android:text="2"
				android:layout_marginTop="3dip" android:layout_width="0dip"
				android:layout_weight="1" android:layout_height="55dip"
				android:singleLine="true" android:maxWidth="100dip" />


			<Button android:id="@+id/num3" android:text="3"
				android:layout_marginTop="3dip" android:layout_width="0dip"
				android:layout_weight="1" android:layout_height="55dip"
				android:singleLine="true" android:maxWidth="100dip" />
				
			<Button android:id="@+id/positiveButton"
				android:layout_marginTop="3dip" android:layout_width="0dip"
				android:layout_weight="2" android:layout_height="55dip"
				android:singleLine="true" android:maxWidth="100dip" />

		</LinearLayout>

<!--Line 2-->		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

