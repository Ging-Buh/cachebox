<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout 
    	android:orientation="horizontal" 
    	android:layout_width="match_parent" 
    	android:layout_alignParentBottom="true" 
    	android:id="@+id/edfn_buttonlayout" 
    	android:layout_height="55dip">
        	<Button android:layout_weight="1" android:layout_width="match_parent" android:text="Button" android:layout_height="match_parent" android:id="@+id/edfn_ok"></Button>
        	<Button android:layout_weight="1" android:layout_width="match_parent" android:text="Button" android:layout_height="match_parent" android:id="@+id/edfn_cancel"></Button>
    </LinearLayout>
	<ScrollView
		android:layout_height="match_parent" 
		android:layout_width="match_parent"
    	android:layout_alignParentRight="true" 
    	android:layout_above="@+id/edfn_buttonlayout">
	    <LinearLayout 
	    	android:layout_width="match_parent" 
	    	android:layout_height="match_parent" 
	    	android:orientation="vertical" 
	    	android:id="@+id/edfn_layout">
	        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:id="@+id/edfn_cachename"></TextView>
	        <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent">
	            <LinearLayout android:layout_height="match_parent" android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_weight="2">
	                <ImageView android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/edfn_image"></ImageView>
	            </LinearLayout>
	            <LinearLayout android:layout_height="match_parent" android:id="@+id/linearLayout3" android:layout_width="match_parent" android:layout_weight="1" android:orientation="vertical">
	                <TextView android:text="TextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/edfn_founds"></TextView>
	                <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/edfn_date"></TextView>
	                <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/edfn_time"></TextView>
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout4" android:layout_width="match_parent">
	            <TextView android:text="TextView" android:layout_weight="2" android:layout_width="match_parent" android:gravity="center_vertical" android:layout_height="match_parent" android:id="@+id/edfn_votelabel"></TextView>
	            <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/edfn_votevalue"></Spinner>
	        </LinearLayout>
	        <EditText android:text="EditText" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/edfn_comment"></EditText>
	    </LinearLayout>
	</ScrollView>	    
</RelativeLayout>
