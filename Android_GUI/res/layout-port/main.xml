<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">

	<RelativeLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent">


		<LinearLayout android:layout_alignParentBottom="true"
			android:layout_height="65dip" android:layout_width="match_parent"
			android:id="@+id/layoutButtons" android:background="@drawable/hintergrund">

			<ImageButton android:layout_height="match_parent"
				android:layout_width="wrap_content" android:layout_weight="1"
				android:id="@+id/buttonDB" android:background="@drawable/db_button_image_selector"
				android:layout_marginTop="2dip">
			</ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="match_parent" android:layout_weight="1"
				android:id="@+id/buttonCache" android:text="@string/Cache"
				android:layout_marginTop="2dip" android:background="@drawable/cache_button_image_selector">
			</ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="match_parent" android:layout_weight="1"
				android:id="@+id/buttonMap" android:text="@string/Map"
				android:layout_marginTop="2dip" android:background="@drawable/nav_button_image_selector">
			</ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="match_parent" android:layout_weight="1"
				android:id="@+id/buttonInfo" android:text="@string/Info"
				android:layout_marginTop="2dip" android:background="@drawable/find_button_image_selector">
			</ImageButton>
			<ImageButton android:layout_width="wrap_content"
				android:layout_height="match_parent" android:layout_weight="1"
				android:id="@+id/buttonMisc" android:text="@string/Misc"
				android:layout_marginTop="2dip" android:background="@drawable/misc_button_image_selector">
			</ImageButton>
		</LinearLayout>
		<FrameLayout android:layout_alignParentLeft="true"
			android:layout_height="fill_parent" android:layout_above="@+id/layoutButtons"
			android:layout_below="@+id/layoutTop" android:layout_width="match_parent"
			android:id="@+id/layoutContent" android:alwaysDrawnWithCache="true">
		</FrameLayout>
		<LinearLayout android:layout_alignParentTop="true"
			android:orientation="vertical" android:layout_width="match_parent"
			android:id="@+id/layoutTop" android:layout_height="wrap_content">

			<de.droidcachebox.Custom_Controls.QuickButtonList.HorizontalListView
				android:id="@+id/main_quick_button_list" android:layout_width="fill_parent"
				android:layout_height="60dip" />

			<de.droidcachebox.Components.CacheNameView
				android:id="@+id/main_cache_name_view" android:layout_width="fill_parent"
				android:layout_height="32dip" />

		</LinearLayout>
	</RelativeLayout>



	<de.droidcachebox.Custom_Controls.Mic_On_Flash
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:id="@+id/mic_flash"
		android:layout_height="60dip" android:layout_width="60dip"
		android:layout_marginRight="2dip" android:layout_marginBottom="140dip" />

	<de.droidcachebox.Custom_Controls.DebugInfoPanel
		android:layout_alignParentTop="true" android:layout_alignParentRight="true"
		android:id="@+id/debugInfo" android:layout_height="60dip"
		android:layout_width="200dip" android:layout_marginRight="2dip"
		android:layout_marginTop="40dip" />

	<de.droidcachebox.Custom_Controls.downSlider
		android:id="@+id/downSlider" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

	<include android:layout_height="wrap_content" android:id="@+id/main_strength_control"
		layout="@layout/strength_control" android:layout_width="wrap_content"
		android:layout_gravity="bottom|right" android:layout_marginRight="10dip"
		android:layout_marginBottom="85dip" android:visibility="invisible"></include>
		
		<!-- das strength_control ist invisible, weil es im main plaziert ist aber nur im sleider gezeichnet wird.  -->

</RelativeLayout>